{{define "title"}}Book View{{end}}

{{define "main"}}
    <h3>{{.Book.Title}}</h3>
    <div class="book-view-container">
        <div class="reading-window" id="reading-content" data-book-url="{{.Book.LocalTextURL}}">>
            <p>Loading book content...</p>
        </div>
        <div class="chat-window">
            <h3>Chat</h3>
            <div id="chat-log"></div>
            <input type="text" id="user-input" placeholder="Any questions, copliot ready to help...">
            <button id="send-button">Send</button>
        </div>
    </div>
{{end}}